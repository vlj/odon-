<ResourceDictionary
    x:Class="client.datatemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <DataTemplate x:Key="toot_template" x:DataType="local:Toot">
        <UserControl>
            <StackPanel Orientation="Horizontal" BorderBrush="Black" BorderThickness="1">
                <Image Source="{x:Bind Author.Avatar, Mode=OneWay}" Width="100" Height="100" />
                <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Bind Author.Username, Mode=OneWay}" />
                <RichTextBlock Width="500">
                    <Paragraph>
                        <Run Text="{x:Bind SpoilerText}" />
                    </Paragraph>
                </RichTextBlock>
                    <StackPanel Orientation="Horizontal">
                    <ToggleSwitch x:Name="toggle" OffContent="" OnContent=""
                                  Visibility="{x:Bind Sensitive}" IsOn="{x:Bind NotSensitive}" />
                    <RichTextBlock Width="300" Visibility="{Binding IsOn, ElementName=toggle}">
                        <Paragraph>
                            <Run Text="{x:Bind Content}" />
                        </Paragraph>
                    </RichTextBlock>
                </StackPanel>
            </StackPanel>
            </StackPanel>
        </UserControl>
    </DataTemplate>

    <DataTemplate x:DataType="local:Account" x:Key="account_template">
        <StackPanel Orientation="Horizontal">
            <Image Source="{x:Bind Avatar}" Width="100" Height="100" />
            <TextBlock Text="{Binding Username}" />
            <Button Content="Fav" Command="{x:Bind OnClick}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
