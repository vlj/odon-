<ResourceDictionary
    x:Class="client.datatemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <DataTemplate x:Key="toot_template" x:DataType="local:Toot">
            <StackPanel Orientation="Horizontal" BorderBrush="Black" BorderThickness="1">
                <Image Source="{x:Bind Author.Avatar, Mode=OneWay}" Width="100" Height="100" />
                <StackPanel>
                <TextBlock Text="{x:Bind Author.Username, Mode=OneWay}" />
                    <RichTextBlock Width="500">
                        <Paragraph>
                        <Run Text="{x:Bind Content, Mode=OneWay}" />
                        </Paragraph>
                    </RichTextBlock>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

    <DataTemplate x:DataType="local:Account" x:Key="account_template">
        <StackPanel Orientation="Horizontal">
            <Image Source="{x:Bind Avatar}" Width="100" Height="100" />
            <TextBlock Text="{Binding Username}" />
            <Button Content="Fav" Command="{x:Bind OnClick}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
